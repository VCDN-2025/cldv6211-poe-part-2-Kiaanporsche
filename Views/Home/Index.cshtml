<!-- About Us Section -->
<div class="about-us-container text-center">
    <h2 class="about-title">About Us</h2>
    <p class="about-text">
        We are passionate about delivering at top-notch experience for our users. Our platform is designed to make event management easy and efficient. It can be many events 
        and venues, and we are here to help you every step of the way, such as weddings, festivals , and corporate events.
    </p>
</div>


@if (ViewBag.Events != null || ViewBag.Venues != null || ViewBag.Bookings != null)
{
    <div class="search-results">
        <h2>Search Results</h2>

        @if (((List<Event>)ViewBag.Events).Any())
        {
            <h4>Events</h4>
            <ul>
                @foreach (var ev in (List<Event>)ViewBag.Events)
                {
                    <li>@ev.EventName - @ev.EventDate.ToShortDateString()</li>
                }
            </ul>
        }

        @if (((List<Venue>)ViewBag.Venues).Any())
        {
            <h4>Venues</h4>
            <ul>
                @foreach (var v in (List<Venue>)ViewBag.Venues)
                {
                    <li>@v.VenueName - @v.Location</li>
                }
            </ul>
        }

        @if (((List<Booking>)ViewBag.Bookings).Any())
        {
            <h4>Bookings</h4>
            <ul>
                @foreach (var b in (List<Booking>)ViewBag.Bookings)
                {
                    <li>Booking @b.BookingId - @b.Event.EventName at @b.Venue.VenueName</li>
                }
            </ul>
        }
    </div>
}




